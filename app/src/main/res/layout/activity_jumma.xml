<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jumma">

    <TextView
        android:id="@+id/txtJumma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/BtnJummaOpenTimePicker"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Time Of Jumma Namaz"
        android:textSize="30sp" />

    <Button
        android:id="@+id/BtnJummaOpenTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/open_time_picker" />

    <Button
        android:id="@+id/BtnJummaCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnJummaOpenTimePicker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="@string/cancel" />

</RelativeLayout>